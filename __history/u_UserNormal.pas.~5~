unit u_UserNormal;

interface
uses dm_co2;
type
UserData = class(tObject)
  Private
  fUsername:string;
  fUserID:integer;
  public
   constructor UserCreate(sUsername);
end;
implementation

{ UserData }

procedure UserData.Usercreate(sUsername);
var bFound:boolean;
begin
fUsername:=sUsername;
with dmco2 do
begin
ADOUsers.First;
bFound=false;
while (not ADOUsers.Eof) and bFound= false do
   begin
    if ADOUsers['Username']= fUsername then
    begin
    fUserID:=ADOUsers['UserID'];
    bfound:=true;
    end;
    ADOUsers.Next;

   end;
end;
end;

end.
